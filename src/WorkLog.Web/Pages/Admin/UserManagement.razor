@page "/admin/users"
@attribute [Microsoft.AspNetCore.Authorization.Authorize(Roles = "Admin")]
@inject HttpClient Http

<PageTitle>使用者管理</PageTitle>

<div class="flex justify-between items-center mb-6">
    <h1 class="text-2xl font-bold text-gray-800">使用者權限管理</h1>
    <div class="flex gap-2">
        <button @onclick="ShowCreateUserModal" class="btn-primary">+ 新增使用者</button>
        <a href="/admin" class="btn-secondary text-sm">← 返回管理</a>
    </div>
</div>

@if (errorMessage != null)
{
    <div class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded-lg mb-4">
        @errorMessage
    </div>
}

@if (successMessage != null)
{
    <div class="bg-green-50 border border-green-200 text-green-700 px-4 py-3 rounded-lg mb-4">
        @successMessage
    </div>
}

@if (users == null)
{
    <p class="text-gray-500">載入中...</p>
}
else
{
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden">
        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                    <tr>
                        <th class="th-cell">ID</th>
                        <th class="th-cell">使用者名稱</th>
                        <th class="th-cell hidden sm:table-cell">電子郵件</th>
                        <th class="th-cell">角色</th>
                        <th class="th-cell hidden md:table-cell">註冊時間</th>
                        <th class="th-cell">操作</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-200">
                    @foreach (var user in users)
                    {
                        <tr class="hover:bg-gray-50">
                            <td class="td-cell">@user.Id</td>
                            <td class="td-cell font-medium">@user.Username</td>
                            <td class="td-cell hidden sm:table-cell text-gray-500">@user.Email</td>
                            <td class="td-cell">
                                <span class="@(user.Role == "Admin" ? "badge-blue" : "badge-gray")">
                                    @(user.Role == "Admin" ? "管理員" : "一般使用者")
                                </span>
                            </td>
                            <td class="td-cell hidden md:table-cell text-gray-500">@user.CreatedAt.ToString("yyyy-MM-dd")</td>
                            <td class="td-cell">
                                <div class="flex gap-2 flex-wrap">
                                    @if (user.Role == "Admin")
                                    {
                                        <button @onclick="() => ChangeRole(user.Id, UserRoleUser)"
                                                class="text-yellow-600 hover:text-yellow-800 text-sm">
                                            設為一般使用者
                                        </button>
                                    }
                                    else
                                    {
                                        <button @onclick="() => ChangeRole(user.Id, UserRoleAdmin)"
                                                class="text-blue-600 hover:text-blue-800 text-sm">
                                            設為管理員
                                        </button>
                                    }
                                    <button @onclick="() => ShowChangePasswordModal(user)"
                                            class="text-green-600 hover:text-green-800 text-sm">
                                        修改密碼
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}

@* 新增使用者模態框 *@
@if (showCreateModal)
{
    <div class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50" @onclick="CloseCreateModal">
        <div class="bg-white rounded-lg shadow-lg p-6 w-full max-w-md" @onclick:stopPropagation="true">
            <h2 class="text-xl font-bold text-gray-800 mb-4">新增使用者</h2>
            
            <EditForm Model="@createUserRequest" OnValidSubmit="CreateUser">
                <DataAnnotationsValidator />
                
                <div class="mb-4">
                    <label class="block text-sm font-medium text-gray-700 mb-1">使用者名稱</label>
                    <InputText @bind-Value="createUserRequest.Username" class="input-field" />
                    <ValidationMessage For="@(() => createUserRequest.Username)" />
                </div>

                <div class="mb-4">
                    <label class="block text-sm font-medium text-gray-700 mb-1">電子郵件</label>
                    <InputText @bind-Value="createUserRequest.Email" type="email" class="input-field" />
                    <ValidationMessage For="@(() => createUserRequest.Email)" />
                </div>

                <div class="mb-4">
                    <label class="block text-sm font-medium text-gray-700 mb-1">密碼</label>
                    <InputText @bind-Value="createUserRequest.Password" type="password" class="input-field" />
                    <ValidationMessage For="@(() => createUserRequest.Password)" />
                </div>

                <div class="mb-4">
                    <label class="block text-sm font-medium text-gray-700 mb-1">角色</label>
                    <InputSelect @bind-Value="createUserRequest.Role" class="input-field">
                        <option value="User">一般使用者</option>
                        <option value="Admin">管理員</option>
                    </InputSelect>
                </div>

                <div class="flex gap-2 justify-end">
                    <button type="button" @onclick="CloseCreateModal" class="btn-secondary">取消</button>
                    <button type="submit" class="btn-primary" disabled="@isSubmitting">
                        @(isSubmitting ? "處理中..." : "新增")
                    </button>
                </div>
            </EditForm>
        </div>
    </div>
}

@* 修改密碼模態框 *@
@if (showPasswordModal)
{
    <div class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50" @onclick="ClosePasswordModal">
        <div class="bg-white rounded-lg shadow-lg p-6 w-full max-w-md" @onclick:stopPropagation="true">
            <h2 class="text-xl font-bold text-gray-800 mb-4">修改密碼</h2>
            
            <p class="text-sm text-gray-600 mb-4">
                為使用者 <strong>@selectedUser?.Username</strong> 設定新密碼
            </p>

            <EditForm Model="@changePasswordRequest" OnValidSubmit="ChangePassword">
                <DataAnnotationsValidator />
                
                <div class="mb-4">
                    <label class="block text-sm font-medium text-gray-700 mb-1">新密碼</label>
                    <InputText @bind-Value="changePasswordRequest.NewPassword" type="password" class="input-field" placeholder="至少 6 個字元" />
                    <ValidationMessage For="@(() => changePasswordRequest.NewPassword)" />
                </div>

                <div class="flex gap-2 justify-end">
                    <button type="button" @onclick="ClosePasswordModal" class="btn-secondary">取消</button>
                    <button type="submit" class="btn-primary" disabled="@isSubmitting">
                        @(isSubmitting ? "處理中..." : "確定修改")
                    </button>
                </div>
            </EditForm>
        </div>
    </div>
}

@code {
    private List<UserListItemDto>? users;
    private const string UserRoleUser = "User";
    private const string UserRoleAdmin = "Admin";

    private bool showCreateModal = false;
    private bool showPasswordModal = false;
    private bool isSubmitting = false;
    private string? errorMessage;
    private string? successMessage;

    private CreateUserRequest createUserRequest = new();
    private ChangePasswordRequest changePasswordRequest = new();
    private UserListItemDto? selectedUser;

    protected override async Task OnInitializedAsync()
    {
        await LoadUsers();
    }

    private async Task LoadUsers()
    {
        try
        {
            users = await Http.GetFromJsonAsync<List<UserListItemDto>>("api/admin/users");
        }
        catch (Exception ex)
        {
            errorMessage = $"載入使用者列表失敗: {ex.Message}";
        }
    }

    private async Task ChangeRole(int userId, string newRole)
    {
        try
        {
            var response = await Http.PutAsJsonAsync($"api/admin/users/{userId}/role",
                new ChangeRoleRequest { Role = newRole });
            
            if (response.IsSuccessStatusCode)
            {
                successMessage = "角色變更成功";
                await LoadUsers();
                ClearMessagesAfterDelay();
            }
            else
            {
                errorMessage = "角色變更失敗";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"角色變更失敗: {ex.Message}";
        }
    }

    // 新增使用者相關方法
    private void ShowCreateUserModal()
    {
        createUserRequest = new CreateUserRequest { Role = "User" };
        errorMessage = null;
        successMessage = null;
        showCreateModal = true;
    }

    private void CloseCreateModal()
    {
        showCreateModal = false;
        createUserRequest = new();
    }

    private async Task CreateUser()
    {
        isSubmitting = true;
        errorMessage = null;
        
        try
        {
            var response = await Http.PostAsJsonAsync("api/admin/users", createUserRequest);
            
            if (response.IsSuccessStatusCode)
            {
                successMessage = "使用者新增成功";
                showCreateModal = false;
                createUserRequest = new();
                await LoadUsers();
                ClearMessagesAfterDelay();
            }
            else
            {
                var error = await response.Content.ReadFromJsonAsync<ApiErrorResponse>();
                errorMessage = error?.Message ?? "新增使用者失敗";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"新增使用者失敗: {ex.Message}";
        }
        finally
        {
            isSubmitting = false;
        }
    }

    // 修改密碼相關方法
    private void ShowChangePasswordModal(UserListItemDto user)
    {
        selectedUser = user;
        changePasswordRequest = new();
        errorMessage = null;
        successMessage = null;
        showPasswordModal = true;
    }

    private void ClosePasswordModal()
    {
        showPasswordModal = false;
        selectedUser = null;
        changePasswordRequest = new();
    }

    private async Task ChangePassword()
    {
        if (selectedUser == null) return;

        isSubmitting = true;
        errorMessage = null;
        
        try
        {
            var response = await Http.PutAsJsonAsync(
                $"api/admin/users/{selectedUser.Id}/password", 
                changePasswordRequest);
            
            if (response.IsSuccessStatusCode)
            {
                successMessage = $"已成功修改 {selectedUser.Username} 的密碼";
                showPasswordModal = false;
                selectedUser = null;
                changePasswordRequest = new();
                ClearMessagesAfterDelay();
            }
            else
            {
                var error = await response.Content.ReadFromJsonAsync<ApiErrorResponse>();
                errorMessage = error?.Message ?? "修改密碼失敗";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"修改密碼失敗: {ex.Message}";
        }
        finally
        {
            isSubmitting = false;
        }
    }

    private async void ClearMessagesAfterDelay()
    {
        await Task.Delay(3000);
        successMessage = null;
        errorMessage = null;
        StateHasChanged();
    }
}
