@page "/register"
@inject AuthService AuthService
@inject NavigationManager Navigation

<PageTitle>註冊</PageTitle>

<div class="min-h-[70vh] flex items-center justify-center">
    <div class="bg-white p-8 rounded-lg shadow-sm border border-gray-200 w-full max-w-md">
        <h2 class="text-2xl font-bold text-gray-800 text-center mb-6">註冊帳號</h2>

        @if (!string.IsNullOrEmpty(errorMessage))
        {
            <div class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded mb-4 text-sm">
                @errorMessage
            </div>
        }

        @if (isSuccess)
        {
            <div class="bg-green-50 border border-green-200 text-green-700 px-4 py-3 rounded mb-4 text-sm">
                註冊成功！即將跳轉至登入頁面...
            </div>
        }

        <EditForm Model="registerModel" OnValidSubmit="HandleRegister" FormName="register">
            <DataAnnotationsValidator />

            <div class="mb-4">
                <label class="block text-sm font-medium text-gray-700 mb-1">使用者名稱</label>
                <InputText @bind-Value="registerModel.Username" class="input-field" placeholder="3-50 字元" />
                <ValidationMessage For="() => registerModel.Username" class="text-red-500 text-xs mt-1" />
            </div>

            <div class="mb-4">
                <label class="block text-sm font-medium text-gray-700 mb-1">電子郵件</label>
                <InputText @bind-Value="registerModel.Email" class="input-field" placeholder="example@mail.com" />
                <ValidationMessage For="() => registerModel.Email" class="text-red-500 text-xs mt-1" />
            </div>

            <div class="mb-4">
                <label class="block text-sm font-medium text-gray-700 mb-1">密碼</label>
                <InputText type="password" @bind-Value="registerModel.Password" class="input-field" placeholder="至少 6 個字元" />
                <ValidationMessage For="() => registerModel.Password" class="text-red-500 text-xs mt-1" />
            </div>

            <div class="mb-6">
                <label class="block text-sm font-medium text-gray-700 mb-1">確認密碼</label>
                <InputText type="password" @bind-Value="registerModel.ConfirmPassword" class="input-field" placeholder="再次輸入密碼" />
                <ValidationMessage For="() => registerModel.ConfirmPassword" class="text-red-500 text-xs mt-1" />
            </div>

            <button type="submit" class="btn-primary w-full" disabled="@isLoading">
                @(isLoading ? "註冊中..." : "註冊")
            </button>
        </EditForm>

        <p class="mt-4 text-center text-sm text-gray-600">
            已有帳號？<a href="/login" class="text-blue-600 hover:text-blue-800">前往登入</a>
        </p>
    </div>
</div>

@code {
    private RegisterRequest registerModel = new();
    private string? errorMessage;
    private bool isLoading;
    private bool isSuccess;

    private async Task HandleRegister()
    {
        isLoading = true;
        errorMessage = null;

        var success = await AuthService.Register(registerModel);
        if (success)
        {
            isSuccess = true;
            await Task.Delay(1500);
            Navigation.NavigateTo("/login");
        }
        else
        {
            errorMessage = "註冊失敗，使用者名稱或電子郵件可能已被使用";
        }

        isLoading = false;
    }
}
