    private int GetPasswordStrength()
    {
        if (string.IsNullOrEmpty(registerModel.Password)) return 0;
        
        int strength = 0;
        if (registerModel.Password.Length >= 6) strength += 25;
        if (registerModel.Password.Length >= 10) strength += 25;
        if (registerModel.Password.Any(char.IsDigit)) strength += 25;
        if (registerModel.Password.Any(char.IsUpper) && registerModel.Password.Any(char.IsLower)) strength += 25;
        
        return strength;
    }

    private Color GetPasswordStrengthColor()
    {
        var strength = GetPasswordStrength();
        return strength switch
        {
            <= 25 => Color.Error,
            <= 50 => Color.Warning,
            <= 75 => Color.Info,
            _ => Color.Success
        };
    }
