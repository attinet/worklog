@inherits LayoutComponentBase
@inject ThemeService ThemeService
@implements IDisposable

<MudLayout>
    <MudAppBar Elevation="1">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" 
                       Color="Color.Inherit" 
                       Edge="Edge.Start" 
                       OnClick="@ToggleDrawer" />
        <MudText Typo="Typo.h6" Class="ml-3">📋 工作紀錄系統</MudText>
        <MudSpacer />
        <MudTooltip Text="@(ThemeService.IsDarkMode ? "切換為淺色模式" : "切換為深色模式")">
            <MudIconButton Icon="@(ThemeService.IsDarkMode ? @Icons.Material.Filled.LightMode : @Icons.Material.Filled.DarkMode)" 
                           Color="Color.Inherit" 
                           OnClick="@ThemeService.ToggleTheme" />
        </MudTooltip>
        <UserInfo />
    </MudAppBar>
    
    <MudDrawer @bind-Open="_drawerOpen" 
               Elevation="2" 
               ClipMode="DrawerClipMode.Always">
        <MudDrawerHeader>
            <MudText Typo="Typo.h6">選單</MudText>
        </MudDrawerHeader>
        <NavMenu />
    </MudDrawer>
    
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="mt-4 mb-4">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    private bool _drawerOpen = true;

    protected override void OnInitialized()
    {
        ThemeService.OnThemeChanged += StateHasChanged;
    }

    private void ToggleDrawer()
    {
        _drawerOpen = !_drawerOpen;
    }

    public void Dispose()
    {
        ThemeService.OnThemeChanged -= StateHasChanged;
    }
}
